<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Swipe between receiving addresses -->

        <view
            android:id="@+id/pgTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="com.mycelium.wallet.activity.main.WrapContentHeightViewPager" />

        <TextView
            android:id="@+id/tvKeyInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llSwipeDots"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >

            <View
                android:id="@+id/placeHolder"
                android:layout_width="fill_parent"
                android:layout_height="5dp" />
        </LinearLayout>

        <View
            android:id="@+id/gap"
            android:layout_width="fill_parent"
            android:layout_height="5dp" />

        <!-- Swipe between balance and transaction history -->

        <android.support.v4.view.ViewPager
            android:id="@+id/pgBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
            android:id="@+id/ivDotOne"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:contentDescription="@string/an_icon"
                android:src="@drawable/circle_line_white" />

            <View
                android:layout_width="8dp"
                android:layout_height="1dp" />

            <ImageView
            android:id="@+id/ivDotTwo"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:contentDescription="@string/an_icon"
                android:src="@drawable/circle_full_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvBetaBuild"
            style="@style/GenericText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:textSize="12sp" />
    </LinearLayout>

</FrameLayout>